<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.statistics.Statistics3Fragment"
    android:id="@+id/frameLayout4">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.anychart.AnyChartView
            android:layout_marginTop="120dp"
            android:id="@+id/lineChart3"
            android:layout_width="350dp"
            android:layout_height="250dp" />

        <com.anychart.AnyChartView
            android:layout_marginTop="10dp"
            android:id="@+id/lineChart4"
            android:layout_width="350dp"
            android:layout_height="250dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/HNoAc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent='0.8' />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/VNoAc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/NoChartAcquired"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@id/HNoAc"
        app:layout_constraintEnd_toEndOf="@id/VNoAc"
        app:layout_constraintStart_toStartOf="@id/VNoAc"
        app:layout_constraintTop_toTopOf="@id/HNoAc"
        android:fontFamily="@font/lato_light"
        android:textSize="15sp"
        android:text="@string/no_word_acquired_yet" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Hrect2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent='0.595' />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Vrect2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.70" />

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="5dp"
        android:layout_margin="10dp"
        android:padding = "10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/Hrect2"
        app:layout_constraintEnd_toEndOf="@id/Vrect2"
        app:layout_constraintStart_toStartOf="@id/Vrect2"
        app:layout_constraintTop_toTopOf="@id/Hrect2">

        <TextView
            android:id="@+id/labelsG4"
            android:layout_width="wrap_content"
            android:fontFamily="@font/lato_light_italic"
            android:text = "@string/number_of_words_monthly_acquired_n_last_6_active_months"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Hbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent='0.15' />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Vbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/changeGraphs2"
        android:textAllCaps="false"
        android:textSize="13sp"
        android:fontFamily="@font/lato_light_italic"
        android:backgroundTint="@color/colorAccent3"
        android:text = "@string/press_for_n_daily_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/Hbutton"
        app:layout_constraintEnd_toEndOf="@id/Vbutton"
        app:layout_constraintStart_toStartOf="@id/Vbutton"
        app:layout_constraintTop_toTopOf="@id/Hbutton"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Hrect3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent='0.15' />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Vrect3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="@id/Hrect3"
        app:layout_constraintEnd_toEndOf="@id/Vrect3"
        app:layout_constraintStart_toStartOf="@id/Vrect3"
        app:layout_constraintTop_toTopOf="@id/Hrect3">

    <TextView
        android:id="@+id/labelsG3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/lato_light_italic"
        android:text="@string/number_of_words_monthly_added_n_last_6_active_months"/>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
